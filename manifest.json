{
    "name": "Zaif API Proxy",
    "description": "ZaifのAPI串",
    "version": "0.1.1",
    "manifest_version": 2,
    "icons": {
        "48": "image/icon.png"
    },
    "content_scripts": [
        {
            "matches": [
                "*://zaif.jp/*"
            ],
            "js": [
                "main.js"
            ]
        }
    ],
    "background": {
        "scripts": ["background.js"]
    },
    "permissions": [
        "webRequest",
        "webRequestBlocking",
        "*://*.zaif.jp/*"
    ],
    "web_accessible_resources": [
        "*.js"
    ]
}